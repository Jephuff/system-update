#!/bin/bash
SOURCE_FOR_PACKAGE_MANAGERS="$PATH_TO_UPDATE_ALL/package-managers"
mkdir -p "$ROOT_FOR_PACKAGE_MANAGERS"

for COMMAND in `ls "$SOURCE_FOR_PACKAGE_MANAGERS"`; do
	if [ -d "$ROOT_FOR_PACKAGE_MANAGERS/$COMMAND" ]; then
    mv "$ROOT_FOR_PACKAGE_MANAGERS/$COMMAND" "$ROOT_FOR_PACKAGE_MANAGERS/$COMMAND".old
  fi

  ln -s "$SOURCE_FOR_PACKAGE_MANAGERS/$COMMAND" "$ROOT_FOR_PACKAGE_MANAGERS"
done
